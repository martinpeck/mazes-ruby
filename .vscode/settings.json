{
    "ruby.intellisense": "rubyLocate",
    "ruby.format": "rubocop",
    "ruby.useLanguageServer": true,
    "ruby.codeCompletion": "rcodetools",
    "ruby.useBundler": true,
    "ruby.lint": {
        "rubocop": {
            "useBundler": true,
            "except": ["Metrics"]
        },
        "reek": {
            "useBundler": true
        },
    },
    "[ruby]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    }
}